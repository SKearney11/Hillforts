<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/LoginPassword"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="85dp"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/LoginUsername"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="Username"
            android:ems="10"
            android:id="@+id/LoginUsername"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="85dp"
            android:layout_marginTop="158dp" app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LoginButton" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginSignup" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"/>
    <Button
            android:text="Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LoginSignup"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="68dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"/>
</android.support.constraint.ConstraintLayout>