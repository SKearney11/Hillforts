<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="HILLFORT"
            android:layout_width="195dp"
            android:layout_height="41dp"
            android:id="@+id/textView" android:textSize="30sp"
            android:textAlignment="center" android:fontFamily="cursive" android:layout_marginTop="99dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
    />
    <ImageView
            android:layout_width="365dp"
            android:layout_height="257dp" app:srcCompat="@drawable/hillfortsplash"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="9dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
</androidx.constraintlayout.widget.ConstraintLayout>